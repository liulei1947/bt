<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:alpha="0"
            android:text="来BT种子社区"
            android:textColor="@color/btn_press_color"
            android:textSize="35sp" />

      <TextView
          android:id="@+id/title2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:alpha="0"
          android:text="资源应有尽有"
          android:textColor="@color/actionbar_background_item_pressed_start"
          android:textSize="25sp" />
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                     >

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re2" />

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re3" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re4" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re5" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re6" />

                    <ImageView
                        android:id="@+id/imageView23"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re7" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                     >

                    <ImageView
                        android:id="@+id/imageView31"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re8" />

                     <ImageView
                         android:id="@+id/imageView32"
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:layout_margin="10dp"
                         android:alpha="0"
                         android:scaleType="centerCrop"
                         android:src="@drawable/re9" />

                      <ImageView
                          android:id="@+id/imageView33"
                          android:layout_width="55dp"
                          android:layout_height="55dp"
                          android:alpha="0"
                          android:scaleType="centerCrop"
                          android:src="@drawable/re10" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView41"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re11" />

                    <ImageView
                        android:id="@+id/imageView42"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_margin="10dp"
                        android:alpha="0"
                        android:scaleType="centerCrop"
                        android:src="@drawable/re12" />

                     <ImageView
                         android:id="@+id/imageView43"
                         android:layout_width="55dp"
                         android:layout_height="55dp"
                         android:alpha="0"
                         android:scaleType="centerCrop"
                         android:src="@drawable/re13" />

                </TableRow>
            </TableLayout>

        </FrameLayout>

    </LinearLayout>

   

</FrameLayout>